@model RS1_2020_01_30.ViewModels.TakmicenjeAddVM


<h2>Dodavanje takmicenja</h2>

@Html.HiddenFor(x=>x.SkolaId)
@using (Html.BeginForm("Save", "Takmicenje", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Skola domacin: ")
        @Html.TextBoxFor(x => x.SkolaNaziv, "", new { @readonly = "readonly", @class = "form-control" })
    </div>
    <div class="form-group">
       @Html.Label("Predmet")
       @Html.DropDownListFor(x=>x.PredmetId,Model.predmeti,new { @class="form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Razred: ")
        @Html.DropDownListFor(x => x.RazredID, Model.razredi, new { @class="form-control"})
    </div>
    <div class="form-group">
        @Html.Label("Datum: ")
        @Html.TextBoxFor(x=>x.Datum,"",new { @class="form-control" })
    </div>
    <input type="submit" value="Snimi" class="btn btn-primary" />
}